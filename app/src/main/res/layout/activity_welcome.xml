<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity"
        android:background="#daf8e3"
        android:clickable="true"
        android:id="@+id/welcomeLayout">

    <TextView
            android:text="If You're Going Through Hell, Keep Going."
            android:layout_width="300sp"
            android:layout_height="150sp"
            android:id="@+id/quote" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8sp"
            android:layout_marginRight="8sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="250sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:autoSizeTextType="uniform"
            app:fontFamily="sans-serif-condensed-medium"
            android:textColor="#94828f"/>

    <TextView
            android:text="â”€Winston Churchill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quote"
            android:layout_marginTop="50sp"
            android:layout_marginRight="35sp"
            app:fontFamily="sans-serif-black"
            android:textSize="15sp"
            android:textColor="#94828f"/>
    <TextView
            android:text="Tap anywhere to dive in your Journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tapReminder" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginBottom="180sp"
            app:fontFamily="sans-serif-medium"
            android:textColor="#8f9482"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:text="Quote collected by Goodreads \nGoodQuotes API created by Trey Mosley (iiimosley)"
            android:ems="10"
            tools:layout_editor_absoluteX="17dp" android:id="@+id/editText"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50sp"
            app:fontFamily="sans-serif-light"
            android:textColor="#8f9482"/>
</android.support.constraint.ConstraintLayout>