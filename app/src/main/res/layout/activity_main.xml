<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" style="@style/Base.Widget.AppCompat.PopupWindow" android:clipToPadding="false"
        android:id="@+id/mainLayout">

    <Button
            android:text="Start Fighting "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginBottom="180sp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="buttonClick"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.887"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"/>

    <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp" app:srcCompat="@drawable/selector"
            android:id="@+id/timeView" android:layout_marginBottom="140sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8sp" android:layout_marginStart="8sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8sp" android:layout_marginRight="8sp" android:layout_marginTop="8sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.494"/>

    <TextView
            android:text="25 Mins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeDisplay" app:layout_constraintEnd_toEndOf="@+id/timeView"
            app:layout_constraintStart_toStartOf="@+id/timeView" android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/timeView" app:layout_constraintTop_toTopOf="@+id/timeView"/>

    <com.triggertrap.seekarc.SeekArc
            android:layout_width="313dp" android:layout_height="324dp"
            android:layout_marginBottom="140sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8sp" android:layout_marginStart="8sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8sp" android:layout_marginRight="8sp" android:layout_marginTop="8sp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="130sp"
            app:arcWidth="10sp"
            app:sweepAngle="320"
            android:rotation="20"
            android:id="@+id/seekBar"/>
    <TextView
            android:text="You have learnt for 0 mins today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8sp" android:layout_marginStart="8sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8sp" android:layout_marginRight="8sp" android:layout_marginTop="100sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintBottom_toTopOf="@id/seekBar"
            android:id="@+id/review"/>

    <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp" app:srcCompat="@android:drawable/ic_menu_today"
            android:id="@+id/planbutton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="30sp" android:layout_marginTop="50sp"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>