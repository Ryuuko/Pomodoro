<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="20"
                android:useLevel="false">

            <gradient
                    android:centerColor="#97ebdb"
                    android:endColor="#97ebdb"
                    android:startColor="#97ebdb"
                    android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
            <shape
                    android:innerRadiusRatio="3"
                    android:shape="ring"
                    android:thicknessRatio="20"
                    android:useLevel="true">


                <gradient
                        android:centerColor="#0086ad"
                        android:endColor="#0086ad"
                        android:startColor="#0086ad"
                        android:type="sweep" />

            </shape>
    </item>
</layer-list>